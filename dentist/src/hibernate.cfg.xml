<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dentist</property>
    <property name="hibernate.connection.username">scan</property>
    <property name="hibernate.connection.password">scan</property>
    <mapping resource="ru/terra/dentist/orm/dto/Patient.hbm.xml"/>
    <mapping resource="ru/terra/dentist/orm/dto/Diagnosis.hbm.xml"/>
    <mapping resource="ru/terra/dentist/orm/dto/Comment.hbm.xml"/>
    <mapping resource="ru/terra/dentist/orm/dto/Appointment.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
